  "opt_parser": {
    "prefix": "opts",
    "description": "Basic opt parsing",
    "body": [
      "usage() {",
      "\tcat - <<EOF",
      "Usage:\n\\$ $TM_FILENAME",
      "EOF",
      "}\n",
      "while true; do",
      "\t[ -z \"\\$1\" ] && break\n",
      "\tcase \"\\$1\" in",
      "\t\t--help|-h|help)\n\t\t\tusage\n\t\t\texit 1\n\t\t\t;;$0",
      "\tesac\n",
      "\tshift",
      "done"
    ]
  }
}
